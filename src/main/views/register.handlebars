{{#if error}}
  <p>{{error}}</p>
{{/if}}

<form
  action="/auth/register"
  method="post"
  style="width: 25%; margin: 0 auto;"
  class="p-3 d-flex justify-content-center align-items-center flex-column"
>
  <div class="">
    <label class="form-label" for="name">Name:</label>
    <input
      class="form-control"
      type="text"
      id="name"
      placeholder="name"
      name="name"
    />
  </div>
  <div class="">
    <label class="form-label" for="email">Email:</label>
    <input
      class="form-control"
      type="text"
      id="email"
      placeholder="Email"
      name="email"
    />
  </div>
  <div class="">
    <label class="form-label" for="password">Password</label>
    <input
      class="form-control"
      type="password"
      id="password"
      placeholder="Password"
      name="password"
    />
  </div>
  <button type="submit" class="btn btn-success">Register</button>

  <p>Ya tenes cuenta? <a href="/auth/login">Logueate</a></p>
</form>
<button
  type="button"
  class="btn btn-dark"
  onclick="location.href='/auth/registergh'"
>Register with GitHub</button>
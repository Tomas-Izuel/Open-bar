<section class="productListContainer flex flex-col gap-10">
  <h1 class="text-white text-center text-xl">Productos disponibles</h1>
  <article
    class="d-flex justify-content-center align-items-center flex-wrap gap-3"
  >
    {{#each data.payload}}
      <div class="card" style="width: 30rem; height: 35rem;">
        <img src={{this.image}} class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.description}}</p>
          <p class="card-text">${{this.price}}</p>
          <a
            href="http://localhost:8080/api/cart/{{idCarrito}}/product/{{this._id}}"
            class="btn btn-warning"
          >Agregar al carrito</a>
        </div>
      </div>
    {{/each}}
  </article>
  <div class="d-flex justify-content-center align-items-center p-5 gap-3">
    {{#if data.hasPrevPage}}
      <a href={{data.prevLink}}><button class="btn btn-info">Prev page</button></a>
    {{/if}}
    {{#if data.hasNextPage}}
      <a href={{data.nextLink}}><button class="btn btn-info">Next page</button></a>
    {{/if}}
  </div>
</section>
<script>
  const idCarrito = sessionStorage.getItem("idCarrito")
</script>